doctype html

html
  head
    link(href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" rel="stylesheet" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous")
    link(href="./css/main.css" rel="stylesheet")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
    script(src="./js/main.js")
  body
    div(class="container")
      div(class="contact active")
        div(class="contact__close")
          div(class="contact__close__icon icon-color")
            i(class="fas fa-times")
        img(class="contact__top" src="http://res.cloudinary.com/do4hzaoh5/image/upload/v1528643410/100_days_of_scss/day13/contact-background.jpg")
        img(class="contact__profile-image" src="https://res.cloudinary.com/do4hzaoh5/image/upload/v1528643410/100_days_of_scss/day13/profile1.jpg")  
        div(class="contact__bottom")
          h1 Amelia Smith
          div(class="contact__icons")
            i(class="fas fa-phone contact__bottom__icon icon-color")
            i(class="fas fa-heart contact__bottom__icon icon-color")
            i(class="fas fa-comment contact__bottom__icon icon-color")
      - for (var x = 1; x <= 4; x++)
        div(class="tile")
          img(src="https://res.cloudinary.com/do4hzaoh5/image/upload/v1528643410/100_days_of_scss/day13/profile" + x + ".jpeg")
          div(class="tile tile__cover")
            div(class="tile__cover__plus")
              i(class="fas fa-plus")
      
